<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Handling Example</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
            text-align: center;
        }

        h1 {
            color: #333;
        }

        .container {
            width: 400px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        button {
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 10px;
        }

        button:hover {
            background-color: #45a049;
        }

        #result {
            font-size: 1.2em;
            margin-top: 20px;
            color: #333;
        }
    </style>
</head>
<body>

    <h1>Event Handling Example</h1>

    <div class="container">
        <h2 id="heading">Hello, Click the Button!</h2>
        
        <button onclick="changeStyle()">Change Style</button>
        <button onclick="changeAttribute()">Change Attribute</button>

        <div>
            <input type="number" id="num1" placeholder="Enter first number">
            <input type="number" id="num2" placeholder="Enter second number">
            <button onclick="performCalculation()">Calculate Sum</button>
        </div>

        <div id="result"></div>
    </div>

    <script>
        // Function to change the style of the HTML element
        function changeStyle() {
            var heading = document.getElementById("heading");
            heading.style.color = "blue"; // Change text color
            heading.style.fontSize = "2em"; // Increase font size
            heading.style.fontWeight = "bold"; // Make text bold
        }

        // Function to change the attribute value of an HTML element
        function changeAttribute() {
            var heading = document.getElementById("heading");
            heading.setAttribute("title", "You changed my title!"); // Change the title attribute
            alert("Title attribute changed to: " + heading.getAttribute("title"));
        }

        // Function to perform calculation (sum of two numbers)
        function performCalculation() {
            var num1 = parseFloat(document.getElementById("num1").value);
            var num2 = parseFloat(document.getElementById("num2").value);
            var sum = num1 + num2;
            document.getElementById("result").innerHTML = "Sum: " + sum; // Display the result
        }
    </script>

</body>
</html>
